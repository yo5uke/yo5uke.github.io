# Root EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# R, Quarto, Markdown
[*.{r,qmd,R,Rmd,md}]
indent_style = space
indent_size = 2

# Python
[*.py]
indent_style = space
indent_size = 4

# Jupyter Notebooks
[*.ipynb]
indent_style = space
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# TOML files
[*.toml]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# JavaScript, TypeScript
[*.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 2

# Lua (for Quarto extensions)
[*.lua]
indent_style = space
indent_size = 2

# HTML, CSS
[*.{html,css,scss}]
indent_style = space
indent_size = 2

# EJS templates
[*.ejs]
indent_style = space
indent_size = 2

# BibTeX
[*.bib]
indent_style = space
indent_size = 2

# Makefiles (require tabs)
[Makefile]
indent_style = tab